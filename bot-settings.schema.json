{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",

  "properties": {
    "$schema": {
      "type": "string"
    },

    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,

        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "comment": {
            "type": "string"
          },
          "ignore": {
            "type": "boolean"
          },
          "regex_name": {
            "type": "string",
            "minLength": 1
          },
          "regex_message": {
            "type": "string",
            "minLength": 1
          },
          "active": {
            "type": "boolean"
          }
        },

        "required": ["name", "active"],

        "allOf": [
          {
            "if": {
              "properties": {
                "active": { "const": true }
              }
            },
            "then": {
              "oneOf": [
                {
                  "required": ["ignore"],
                  "properties": {
                    "ignore": { "const": true }
                  }
                },
                {
                  "required": ["regex_name"]
                }
              ]
            }
          },
          {
            "if": {
              "required": ["regex_name"]
            },
            "then": {
              "required": ["regex_message"]
            }
          }
        ]
      }
    }
  },

  "required": ["rules"],
  "additionalProperties": false
}
